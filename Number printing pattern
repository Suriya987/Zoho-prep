Input : 5

1
2 6
3 7 10
4 8 11 13
5 9 12 14 15


#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n=5,curr=n-1;
    
    for(int i=1;i<=n;i++)
    {
        int val=i;
        int temp=curr;
        for(int j=1;j<=i;j++)
        {
            cout<<val<<" ";
            val=val+temp;
            temp--;
            
        }
        cout<<"\n";
    }
    
    
}
